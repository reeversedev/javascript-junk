<h2 class="page-header">Create Ticket</h2>
{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
{{/if}}
<form method="post" action="/support/create">
    <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" placeholder="Title" name="title">
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea rows="4" cols="58" name="description"></textarea>
    </div>
    <!--<div class="form-group">
        <label for="file">Upload File:</label>
        <input type="file" class="form-control-file" id="file" name="file" aria-describedby="fileHelp">
    </div>-->
    <button type="submit" class="btn btn-success">Submit</button>
</form>