<!DOCTYPE html>
<html>

<head>
  <title>Support System</title>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link href="/css/styles.css" rel="stylesheet">
</head>

<body>
  <div class="container">
    <header class="header clearfix">
      <nav>
        <ul class="nav nav-pills float-right">

          {{#if user}}
          <li class="nav-item">
            <a class="nav-link " href="/">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link " href="/support/create">Raise Ticket</a>
          </li>
          <li class="nav-item">
            <a class="nav-link " href="/support/tickets">Tickets</a>
          </li>
          <li class="nav-item">
            <a class="nav-link " href="/support/all-tickets">All Tickets</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/support/logout">Logout</a>
          </li>
          {{else}}
          <li class="nav-item">
            <a class="nav-link" href="/support/login">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/support/register">Register</a>
          </li>
          {{/if}}
        </ul>
      </nav>
      <h3 class="text-muted">Support System</h3>
    </header>

    <main role="main">


      <div class="row">
        <div class="col-lg-12">
          {{#if success_msg}}
          <div class="alert alert-success">{{success_msg}}</div>
          {{/if}} {{#if error_msg}}
          <div class="alert alert-danger">{{error_msg}}</div>
          {{/if}} {{#if error}}
          <div class="alert alert-danger">{{error}}</div>
          {{/if}} {{{body}}}
        </div>

      </div>

    </main>

    <footer class="footer">
      <p>&copy; Support System 2017</p>
    </footer>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
      crossorigin="anonymous"></script>
  </div>
  <!-- /container -->
</body>

</html>